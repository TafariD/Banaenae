<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script>
    var url = "/daily"
    $(document).ready(function(){

        //Render List
        $.getJSON(url, function(list){
            $.each(list, function (i, food_obj) {
                $('#data').append(
                    "<div class='row food-item-box'>" +
                    "<div class='col-xs-8 fooditem' ><p class='fooditem' id='" + food_obj.id + "'>" + 
                    food_obj.name + "</p> </div>" +
                    "<div class='col-xs-4 scores-buttons'>"
                            + "<div class='col-xs-12'><span class='glyphicon glyphicon-menu-up' id=' "+food_obj._id +"'></span></div>"
                            + "<div class='col-xs-12 foodscore'><p class='foodscore' id=' "+food_obj._id +"'>" + food_obj.daily_score.toString() + "</p></div>"
                            + "<div class='col-xs-12'><span class='glyphicon glyphicon-menu-down' id=' "+food_obj.id +"'></span></div> </div>" +
                    "</div>")
                });
            //Buttons 
            $('span.glyphicon-menu-up').click(function(){
                $(this).parent().parent().find("div.foodscore").find('p').append("<span>+1</span>");
            });

            $('span.glyphicon-menu-down').click(function(){
                $(this).parent().parent().find("div.foodscore").find('p').append("<span>-1</span>");
            });
        });
            $('#test_log').click(function(){
                console.log('clicked');
            });


    });
    </script>

    <title>FoodBack</title>

    <!-- Bootstrap core CSS -->
    <link href="bootstrap3.3.4/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="styles/scores.css" rel="stylesheet">
  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">FoodBack</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="#">Daily</a></li>
            <li><a href="#about">Alltime</a></li>
            <li><a href="#daily">info</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container-fluid content">
      <div class="starter-template">
        <div class="lead row">
          <div class="col-md-12 top">
            <h1> Hey <%= user.google.name %>! This is what's trending</h1>
          </div>
            <div class="col-sm-2 hidden-xs hidden-sm sidebar">
                <p> Left info space, sign in, account data etc.... </p>
                <a href="/logout" class="btn btn-default btn-sm">Logout</a>
                <span class="btn btn-default btn-sm" id="test_log">Print clicked to console</span>
            </div>
            <div class="col-sm-10 foodbox">
                <div id="data"></div>
            </div>
        </div>
    </div><!-- /.container -->
  </div>


